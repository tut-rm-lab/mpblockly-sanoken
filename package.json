{
  "name": "mpblockly",
  "private": true,
  "version": "0.1.3.1",
  "type": "module",
  "main": "./main/dist/src/index.js",
  "build": {
    "files": [
      "main/dist/**/*.js",
      "renderer/dist/**/*",
      "packages/preload/dist/**/*.js",
      "LICENSE",
      "NOTICE"
    ]
  },
  "scripts": {
    "dev": "tsc --build && cross-env NODE_ENV=development electron .",
