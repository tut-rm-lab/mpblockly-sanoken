    "biome": "biome check",
    "preinstall": "npx only-allow npm"
  },
  "workspaces": [
    "packages/app",
    "packages/preload"
  ],
  "dependencies": {
    "@blockly/field-colour": "^6.0.4",
    "@fontsource/roboto": "^5.2.6",
    "@mpblockly/app": "*",
    "@mpblockly/preload": "*",
    "react-dom": "^19.1.0",
    "serialport": "^13.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.1",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "cross-env": "^7.0.3",
    "electron": "^37.2.1",
    "electron-builder": "^26.0.12",
    "typescript": "~5.8.3",
    "vite": "^7.0.4"
  }
